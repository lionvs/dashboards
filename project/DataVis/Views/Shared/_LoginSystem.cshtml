@model DataVis.Models.UserLoginModel

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new {@class = "navbar-form navbar-right"}))
    {
        <div class="form-group">
            @Html.ActionLink(User.Identity.Name, "Me", "Account")
            <button type="submit" class="btn btn-default">Log out</button>
        </div>
    }
}
else
{
    using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
    {
        @Html.ValidationSummary(true, "Login failed. Check your login details.")

        <div class="form-group">
            @Html.TextBoxFor(u => u.Login, new { @class = "form-control", @placeholder = "Login" })
        </div>
        <div class="form-group">
            <div>@Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "Password" })</div>
        </div>

        <button type="submit" class="btn btn-default">Enter</button>
        <a class="btn btn-default" href="/account/register">Register</a>
    }
}