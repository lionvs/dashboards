<!DOCTYPE html>
<html ng-app="application">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>.Net 134</title>
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="http://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="/Scripts/Libraries/modernizr-2.6.2.js"></script>
    <script src="/Scripts/Libraries/bootstrap.js"></script>
    <script src="/Scripts/Libraries/respond.js"></script>
    <script src="/Scripts/events.js"></script>
    <script src="/Scripts/sandbox.js"></script>
    <script src="/Scripts/moduleHighChart.js"></script>
    <script src="/Scripts/moduleDataTable.js"></script>
    <script src="/Scripts/core.js"></script>
    <script src="/Scripts/moduleUploadData.js"></script>
    <script src="/Scripts/moduleChartConfig.js"></script>
    <script src="/Scripts/eventManager.js"></script>
    <script src="/Scripts/moduleManager.js"></script>
    <script src="/Scripts/directive.js"></script>
    <script src="/Scripts/moduleFilters.js"></script>
    <script src="/Scripts/user.js"></script>
    <script src="/Scripts/proxy.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.0.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Data visualization", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-form navbar-right">
                @{
                    if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-default" onclick=logOut()>Log Out</a>
                    }
                    else
                    {
                        <a class="btn btn-default" href="/home/login">Sign in</a>
                        <a class="btn btn-default" href="/home/register">Register</a>
                    }
                }
            </div>
            @{
                if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <p class="navbar-text navbar-right">Signed in as<strong> @HttpContext.Current.User.Identity.Name</strong></p>
                    <div>
                        <div class="navbar-form" ng-controller="headerDashboardSelector">
                            <form class="form-inline">
                                <div class="form-group">
                                    <label class='control-label'>Current Dashboard: </label>
                                    <select class='form-control header' ng-model='globalConfig.dashboard' ng-options='opt as opt for opt in dashboardOptions' ng-change='Update()'></select>
                                </div>

                                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
                                    Save Config
                                </button>
                            </form>

                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
</body>
</html>

<script src="/Scripts/angularControllers/headerDashboardSelector.js"></script>
<script>
    function logOut() {
        $.ajax({
            headers: user.headers,
            type: 'POST',
            url: '/api/Account/Logout'
        }).done(function () {
            sessionStorage.removeItem(user.tokenKey);
            location.reload();
        }).fail(function (resp) {
            alert(resp.status + ": " + resp.statusText);
        });
    }
</script>